<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/piece_9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_9"/>
        <ImageView
            android:id="@+id/piece_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_8"/>
        <ImageView
            android:id="@+id/piece_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/piece_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_6"/>
        <ImageView
            android:id="@+id/piece_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_5"/>
        <ImageView
            android:id="@+id/piece_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/piece_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_3"/>
        <ImageView
            android:id="@+id/piece_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_2"/>
        <ImageView
            android:id="@+id/piece_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/yuki_1"/>
    </LinearLayout>

    <Button
        android:id="@+id/shufflePieces"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="50dip"
        android:paddingRight="50dip"
        android:text="シャッフル"
        android:onClick="shuffle"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="答え"
        android:onClick="cotae"
        />

    <Button
        android:id="@+id/btFinish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="終了"
        android:onClick="btFinish"/>

</LinearLayout>